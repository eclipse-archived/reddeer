<?xml version="1.0" encoding="UTF-8"?>
<!-- Database requirement example -->
<testrun 
    xmlns="http://www.jboss.org/NS/Req" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:db="http://www.jboss.org/NS/db-schema"
    xsi:schemaLocation="http://www.jboss.org/NS/Req RedDeerRequirements.xsd http://www.jboss.org/NS/db-schema DatabaseRequirement.xsd">

    <requirements>
        <db:database-requirement name="h2-sakila">
        	<db:type>Generic JDBC</db:type>
            <db:jdbc>jdbc:h2:db://localhost/sakila</db:jdbc>		
            <db:driverPath>${PROJECT}/h2-1.3.161.jar</db:driverPath>	
            <db:driverClass>org.h2.Driver</db:driverClass>
            <db:username>sa</db:username>
            <db:password></db:password>
        </db:database-requirement>
    </requirements>
</testrun>