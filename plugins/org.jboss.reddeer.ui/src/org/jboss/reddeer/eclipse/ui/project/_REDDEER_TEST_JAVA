package org.reddeer.test;

import static org.junit.Assert.assertTrue;

import org.jboss.reddeer.eclipse.jdt.ui.NewJavaClassWizardDialog;
import org.jboss.reddeer.eclipse.jdt.ui.NewJavaClassWizardPage;
import org.jboss.reddeer.eclipse.jdt.ui.ide.NewJavaProjectWizardDialog;
import org.jboss.reddeer.eclipse.jdt.ui.ide.NewJavaProjectWizardPage;
import org.jboss.reddeer.eclipse.ui.problems.ProblemsView;
import org.jboss.reddeer.eclipse.ui.problems.ProblemsView.ProblemType;
import org.jboss.reddeer.junit.runner.RedDeerSuite;
import org.jboss.reddeer.workbench.impl.editor.TextEditor;
import org.junit.Test;
import org.junit.runner.RunWith;

/**
 * RedDeer Test example generated by RedDeer Test Plug-in wizard
 */
@RunWith(RedDeerSuite.class)
public class RedDeerTest {

	@Test
	public void reddDeerTestExample() {
		
		// Create Java Project
		NewJavaProjectWizardDialog projectDlg = new NewJavaProjectWizardDialog();
		projectDlg.open();
		NewJavaProjectWizardPage ppage = new NewJavaProjectWizardPage();
		ppage.setProjectName("testProject");
		projectDlg.finish();
		
		// Create Java class
		NewJavaClassWizardDialog classDlg = new NewJavaClassWizardDialog();
		classDlg.open();
		NewJavaClassWizardPage classPage = new NewJavaClassWizardPage();
		classPage.setName("RedDeerDemo");
		classPage.setPackage("org.reddeer.demo");
		classDlg.finish();
		
		// Edit Java class
		TextEditor textEditor = new TextEditor("RedDeerDemo.java");
		textEditor.setText("Written by RedDeer");
		textEditor.save();
		
		// Check ProblemsView
		ProblemsView problemsView = new ProblemsView();
		problemsView.open();
		assertTrue(!problemsView.getProblems(ProblemType.ERROR).isEmpty());
	}
}
