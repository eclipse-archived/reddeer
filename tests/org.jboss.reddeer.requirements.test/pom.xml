<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.jboss.reddeer.requirements.test</artifactId>
	<name>Red Deer Requirements Tests</name>
	<packaging>eclipse-test-plugin</packaging>

	<parent>
		<groupId>org.jboss.reddeer</groupId>
		<artifactId>tests</artifactId>
		<version>0.6.0-SNAPSHOT</version>
	</parent>
	
	<properties>
		<apache-tomcat-7.home>${project.build.directory}/apache-tomcat-7.0.54</apache-tomcat-7.home>
	</properties>

	<profiles>
		<profile>
			<id>add-jdt-feature</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-surefire-plugin</artifactId>
						<configuration>
							<dependencies combine.children="append">
								<!-- This entry should enable creating of default JDK on Mac -->
								<dependency>
									<type>p2-installable-unit</type>
									<artifactId>org.eclipse.jdt.feature.group</artifactId>
									<version>0.0.0</version>
								</dependency>
							</dependencies>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<resources>
			<resource>
				<!-- Directory where to look for server requirement xml --> 
				<directory>${basedir}/../../plugins/org.jboss.reddeer.requirements/resources</directory>
				<!-- Filtering enables substitution of variables defined in xml files -->
				<filtering>true</filtering>
			</resource>
		</resources>
		
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<configuration>
					<useUIThread>false</useUIThread>
					<argLine>-Xms256m -Xmx512m -XX:PermSize=64m -XX:MaxPermSize=128m -Dreddeer.config=${basedir}/bin</argLine>
					<dependencies combine.children="append">
								<!-- This entry should enable creating of default JDK on Mac -->
								<dependency>
									<type>p2-installable-unit</type>
									<artifactId>org.eclipse.jst.server_adapters.ext.feature.feature.group</artifactId>
									<version>0.0.0</version>
								</dependency>
					</dependencies>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>maven-download-plugin</artifactId>
				<executions>
					<execution>
						<id>install-apache-tomcat-7</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>http://mirror.hosting90.cz/apache/tomcat/tomcat-7/v7.0.54/bin/apache-tomcat-7.0.54.zip</url>
							<outputFileName>apache-tomcat-7.0.54.zip</outputFileName>
							<md5>e819542bf313c3a5e0c1ad03c15880b6</md5>
							<unpack>true</unpack>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
